<project default="all">
   <target name="clean">
      <delete dir="gen-java"/>
      <delete>
         <fileset dir="." includes="*.class"/>
      </delete>
   </target>
   
   <target name="compile">
      <exec executable="thrift">
         <arg line="-gen java"/>
         <arg value="simple.thrift"/>
      </exec>
      <javac includeantruntime="false" classpath="/usr/local/lib/libthrift-1.0.0.jar:/usr/local/lib/slf4j-api-1.7.12.jar:/usr/local/lib/slf4j-nop-1.7.12.jar" srcdir="gen-java" destdir="gen-java"/>
      <javac includeantruntime="false" classpath="/usr/local/lib/libthrift-1.0.0.jar:gen-java" srcdir="." destdir="."/>
   </target>
   
   <target name="run">
      <java classname="StandAlone" classpath="/usr/local/lib/libthrift-1.0.0.jar:/usr/local/lib/slf4j-api-1.7.12.jar:/usr/local/lib/slf4j-nop-1.7.12.jar:gen-java:.">
      </java>
   </target>

   <target name="runserver">
      <java classname="SimpleServer" classpath="/usr/local/lib/libthrift-1.0.0.jar:/usr/local/lib/slf4j-api-1.7.12.jar:/usr/local/lib/slf4j-nop-1.7.12.jar:gen-java:."/>
   </target>
   <target name="runclient">
      <java classname="SimpleClient" classpath="/usr/local/lib/libthrift-1.0.0.jar:/usr/local/lib/slf4j-api-1.7.12.jar:/usr/local/lib/slf4j-nop-1.7.12.jar:gen-java:."/>
   </target>

   <target name="all" depends="clean,compile"/>
</project>
